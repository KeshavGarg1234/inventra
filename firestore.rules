
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Allow public read access to the inventory data
    match /inventory/data {
      allow read, write: if true; // In a real app, you'd use `if request.auth != null;`
    }
  }
}
